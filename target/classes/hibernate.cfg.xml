<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/teksystems?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">teksystems</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <mapping class="in.tekathon.model.EmployeeResponse"/>
        <mapping class="in.tekathon.model.ProjectDetailsResponse"/>
        <mapping class="in.tekathon.model.TimeAndExpenseResponse"/>
        <mapping class="in.tekathon.model.SkillsResponse"/>
    </session-factory>
</hibernate-configuration>
